<%- include("partials/header.ejs") %>

        <div class="container">

            <form class="blog-post-form" action="/submit-post" method="post">
                <section>
                    <label for="post-title">Title</label>
                    <input type="text" name="post-title">
                </section>

                <section>
                    <label for="post-content">Content</label>
                    <textarea name="post-content" placeholder="talk about your day.."></textarea>
                </section>

                <button type="submit">SUBMIT</button>
            </form>

            <form class="post-delete-form" action="/delete-post" method="post">
                <input type="text" name="post-to-delete" placeholder="post ID" style="text-align: right;">
                <button type="submit">DELETE</button>
            </form>

            <div class="blog-posts-container">

                <% if (locals.posts && posts.length > 0) { %>

                    <% posts.forEach((post) => { %>

                        <div class="post-container">
                            <section class="post-top">
                                <p>id#<%= post.postId %></p>
                            </section>
                            <section class="post-middle">
                                <p><%= post.title %></p>
                            </section>
                            <section class="post-bottom">
                                <p><%= post.content %></p>
                            </section>
                        </div>

                    <% }); %>

                <% } else { %>

                    <p>Currently no posts to show...</p>

                <% } %>

            </div>

        </div>

<%- include("partials/footer.ejs") %>